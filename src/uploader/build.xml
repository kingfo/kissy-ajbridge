<project name="flash.build" default="build" basedir=".">
    <description>Component Build File</description>

    <import file="../../tools/build.xml"/>

    <property file="build.properties"/>
    <property name="src.dir" location="."/>

    <target name="concat">
        <concat destfile="uploader-pkg.js" encoding="${charset}" outputencoding="${charset}">
            <path path="../ajbridge/ajbridge.js"/>
            <path path="uploader.js"/>
        </concat>
        <copy file="uploader.swf" todir="${src.dir}"/>
    </target>

    <target name="clean">
        <delete file="uploader-pkg.js"/>
    </target>

    <target name="build" depends="concat,common.build,clean">
    </target>
</project>
